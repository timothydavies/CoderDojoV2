doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title Ninja Toolbar
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='css/bootstrap.min.css')

    link(rel='stylesheet', href='css/main.css')

    link(rel='stylesheet', href='css/feedback.css')
    link(rel="stylesheet" type="text/css" media="screen" href="//cdnjs.cloudflare.com/ajax/libs/fancybox/1.3.4/jquery.fancybox-1.3.4.css")

    script(src='js/vendor/modernizr-2.8.3-respond-1.4.2.min.js')

  body
    //if lt IE 8
      p.browserupgrade
        | You are using a 
        strongly outdated
        |  browser. Please 
        a(href='http://browsehappy.com/') upgrade your browser
        |  to improve your experience.
    .container-fluid
      // User panel
      .panel.panel-primary
        #headingOne.panel-heading(role='tab')
          h4.panel-title
            div(role='button') CoderDojo
        #collapseOne.panel-collapse.collapse.in(role='tabpanel', aria-labelledby='headingOne')
          .panel-body
            //- TODO icon unused
            span.ico.glyphicon.glyphicon-menu-down.pull-right
            span.pull-right
              //- TODO change /img/ninja.png to one either assigned by the server or an uploaded image
              img#imgAvatar(src='/img/ninja.png', height='31', width='45')
            .pull-right.padding-rt
              #ninjaName.text-right Anonymous
              #user_type.text-right
                small Ninja
      #accordion.panel-group(role='tablist', aria-multiselectable='true')
        // Presentation panel
        .panel.panel-primary
          #headingTwo.panel-heading(role='tab')
            h4.panel-title
            div.dropdown
              a.collapsed.dropdown-toggle(role='button', aria-expanded='false', aria-controls='collapseTwo', data-toggle='dropdown') Presentations
                ul.dropdown-menu
                  li 
                    a(id='toBroadcast',href='../Broadcast',target='_blank') Live Broadcasts
                  li
                    a(id='toEplayer',href='../Eplayer',target='_blank') Youtube Uploaded Presentations              
          //- TODO What's this doing here?
          #collapseTwo.panel-collapse.collapse.in(role='tabpanel', aria-labelledby='headingTwo')
            .panel-body
              div
                .pull-left
                  span.ico.glyphicon.glyphicon-step-backward.pull-left
                  span.ico.glyphicon.glyphicon-step-forward.pull-left
                .pull-right
                  span.ico.glyphicon.glyphicon-fullscreen
                  span.ico.glyphicon.glyphicon-volume-up
                  span.ico.glyphicon.glyphicon-cog
              br
              div(style='height:200px;border:solid 1px lightgrey')
                .text-center
                  span.glyphicon.glyphicon-facetime-video(style='font-size:15em;color:lightgrey')
        // Chats panel
        .panel.panel-primary
          #headingThree.panel-heading(role='tab')
            h4.panel-title
              a.collapsed(role='button', data-toggle='collapse', data-parent='#accordion', href='#collapseThree', aria-expanded='false', aria-controls='collapseThree') Chats
          #collapseThree.panel-collapse.collapse.in(role='tabpanel', aria-labelledby='headingThree')
            #chatPanel.panel-body
              // First option to chat with Mentor
              #chatFirstPhase.row(style='margin-bottom:10px')
                .col-xs-12.pull-left
                  span.pull-left.glyphicon.glyphicon-comment(style='color:grey;font-size:2.5em;padding-right:10px')
                  small#firstPhaseText To chat with the mentor, click on 'Chat' button
                .col-xs-12
                  br
                  #firstPhaseButton.btn.btn-default.btn-block.input-sm Chat
              // Second option after the above chat button is clicked
              #chatSecondPhase
                meter#myVolume.volume(height='20px', width='70%', min='-45', max='-20', high='-25', low='-40') My Volume bar
                #localCamBox.video-box
                br
                | 	If you can hear yourself and the bar above is reacting, click OK.
                #secondPhaseButton.btn.btn-default.btn-block.input-sm OK
              br
              // Third option : chat Window
              #chatThirdPhase
                div.panel-primary
                  span.pull-left
                    img(src='/img/mentor.png', height='42', width='48')
                  .pull-left.padding-lt
                    #mentorName.text-left Paul
                    .text-left
                      small Mentor
                  br
                  div
                    .videoControls
                      span.ico.glyphicon.glyphicon-fullscreen
                      span.ico.glyphicon.glyphicon-volume-up
                      span.ico.glyphicon.glyphicon-cog
                    br
                    #remoteCamBox.video-box
                  br
                  #shareButton.btn.btn-default.btn-block.input-sm Share Window
                  #iconPosReference
                    #localScreenBox.video-box.panel-primary
                    //- TODO rename from follower-dark to follower
                    img#follower-dark.point-icon.follower(src='/img/f-dark.png')

                  div#Ninja-feedback-options.feedback-options.panel-heading
                    
                    //- TODO give mentor control over whether or not arrow is shown on ninja's screen.
                    div#icon-color-div
                        input#follower-option1.icon-btn(type='checkbox', name='icon')
                        small Enable Arrow

                    div#ButtonZone
                        button.resizebtn#enlargeButton Expand
                        button.resizebtn#shrinkButton Original
                    .videoControls
                      span.ico.glyphicon.glyphicon-fullscreen
                      span.ico.glyphicon.glyphicon-volume-up
                      span.ico.glyphicon.glyphicon-cog
                    div.clear
                  br
                  #finishButton.btn.btn-default.btn-block.input-sm Finished!

                // Chat overlay
                .overlay
                  div#chatOverlay
                    #chatWindow
                    form#chatForm(action='')
                      input#message
                      button#submit.btn.btn-default(type='button')
                        span.ico.glyphicon.glyphicon-ok
                      button#logBtn.btn.btn-default.boolBtn(type='button')
                        span#logIcon.ico.glyphicon.glyphicon-chevron-div
                  #recentChat
                  button#ovrBtn.btn.btn-default.boolBtn(type='button')
                    span.ico.glyphicon.glyphicon-comment

    
